{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,              // Enable declaration file generation
    "declarationDir": "./dist",       // Output the .d.ts files to the dist folder
    "outDir": "./dist",               // Ensure compiled JS goes to dist
    "rootDir": "./src",               // Ensure the source files are in src
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
